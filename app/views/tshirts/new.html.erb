<h1>Add a new Tshirt</h1>
<%= simple_form_for(@tshirt) do |f| %>
  <%= f.input :name %>
  <%= f.input :description %>
  <%= f.input :photo %>
  <%= f.input :photo_cache, as: :hidden %>
  <%= f.input :tags, input_html: {value: f.object.tags.to_s} %>
  <%= f.submit "Add a new shirt", class: "btn btn-primary" %>
<% end %>

