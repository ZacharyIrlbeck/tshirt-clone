<br>
<div class="container">
  <div class="row">
    <div class="col-md">
      <img src="<%= image_path('white.png')%>" height=450, width=500, alt="">
    </div>
    <div class="col-md">
      <h1>Add a new t-shirt design</h1>
      <%= simple_form_for(@tshirt) do |f| %>
        <%= f.input :name %>
        <%= f.input :description %>
        <%= f.input :photo %>
        <%= f.input :photo_cache, as: :hidden %>
        <%= f.submit "Load photo", class: "btn btn-primary btn-sm" %>
      <% end %>
      <br>
      <h3>Color:</h3>
      <div class="custom-options">
      <%= simple_form_for(@tshirt) do |f| %>
      <%= f.collection_radio_buttons :description, [['white', 'White'], ['grey', 'Grey'], ['black', 'Black']], :first, :last %>
      <% end %>
      <br>
      </div>
      <div class="nav-buttons">
        <a href=<%= tshirts_path %> class="btn btn-outline-dark btn-sm">Back to tshirts</a>
      </div>
    </div>
  </div>
</div>


