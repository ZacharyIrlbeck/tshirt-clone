  <div class="text-center" style="padding: 15px">
    <h3>View our Tees from around the world!</h3>
    <%= link_to "Add a new shirt", new_tshirt_path, {class: 'btn btn-primary'} %>
  </div>

  <div class="container">
    <div id="map" style="width: 100%;
    height: 400px;
    margin: 30px 0px;"
    data-markers="<%= @markers.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
  </div>

  <div class="container">
  <div class="row">
    <% @tshirts.each do |tshirt| %>
      <div class="col-md-4">
        <div class="card"
          style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path tshirt.photo, height: 300, width: 400, crop: :fill %>')">
          <div class="card-category">
            <%= link_to tshirt.name, tshirt_path(tshirt) %>
          </div>
          <div class="card-description">
            <h2><%= tshirt.description %></h2>
          </div>
          <img src="" alt="" class="card-user">
        </div>
      </div>
    <% end %>
  </div>
</div>


